
<%= form_for(@mail) do |f| %>
	
	<% if @mail.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@mail.errors.count, "error") %> prohibited this mail from being saved:</h2>

			<ul>
				<% @mail.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>

			</ul>
		</div>
	<% end %>
<table class="mailEditor">

		
		<tr>
				<td><label>add Patients</label></td>
				<td>:</td>
				<td>

					<%= f.fields_for :patients do |g| %>
						<%= render "patient_fields", :f => g %>
					<% end %>
					<p><%= link_to_add_fields "Add Patient", f, :patients %></p>

				</td>
		</tr>
		<tr>
			<td><%= f.label :subject %><br /></td>
			<td>:</td>
			<td><%= f.text_field :subject %></td>
		</tr>
		
		
		<tr>
			<td><%= f.label :body %><br /></td>
			<td>:</td>
			<td><%= f.text_area :body ,:row=>"20",:class=>"mail_text" %></td>
		</tr>

	</table>
	<div class="actions mailEditor">
		<%= f.submit "SAVE" %>
		
	</div>
<% end %>
<style type="text/css">
	.mail_text {
		width: 600px;

	}
</style>
